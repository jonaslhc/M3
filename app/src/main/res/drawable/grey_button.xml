<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/Grey" />
            <stroke
                android:width="1dp"
                android:color="@color/DarkerGrey" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="1dp"
                android:right="10dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/Grey"
                android:endColor="@color/DarkerGrey"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/DarkerGrey" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="1dp"
                android:right="10dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>